<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="-400dp"
        android:src="@drawable/paus"
        />

    <TextView
        android:id="@+id/txt_silahkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-470dp"
        android:layout_below="@id/gambar"
        android:text="Daftarkan Akunmu"
        android:textStyle="bold"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/txt_silahkan"
        android:text="Email"
        android:textStyle="normal"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/ip_email"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_below="@id/txt_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:paddingLeft="20dp"
        android:hint="Masukkan Email Anda"
        android:inputType="text"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="3dp"
        android:textColor="@color/grey"
        android:textSize="13dp"
        app:strokeColor="@color/grey"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/ip_email"
        android:text="Username"
        android:textStyle="normal"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/ip_username"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_below="@id/txt_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:paddingLeft="20dp"
        android:hint="Masukkan Username Anda"
        android:inputType="text"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="3dp"
        android:textColor="@color/grey"
        android:textSize="13dp"
        app:strokeColor="@color/grey"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/txt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/ip_username"
        android:text="Password"
        android:textStyle="normal"
        android:textSize="12dp"
        android:fontFamily="sans-serif-black"/>

    <EditText
        android:id="@+id/ip_password"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_below="@id/txt_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:paddingLeft="20dp"
        android:hint="Masukkan Password Anda"
        android:inputType="text"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="3dp"
        android:textColor="@color/grey"
        android:textSize="13dp"
        app:strokeColor="@color/grey"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/txt_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ip_password"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:text="Sudah Punya Akun"
        android:textColor="@color/dgrey" />

    <Button
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_akun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:width="340dp"
        android:height="20dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="sans-serif"
        android:text="Daftar"
        android:textColor="@color/white"
        android:textColorHighlight="#673AB7"
        android:textStyle="normal" />

</RelativeLayout>