<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="-200dp"
        android:src="@drawable/paus" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-380dp"
        android:layout_below="@id/gambar"
        android:text="Selamat Datang"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_eco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_welcome"
        android:text="di Aplikasi ECOMARINA"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_marina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_eco"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:textStyle="normal"
        android:textSize="14sp"
        android:text='"Ayo, Bersama Lestarikan Laut Kita!"' />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_marina"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:width="340dp"
        android:height="20dp"
        android:textSize="14sp"
        android:backgroundTint="@color/blue"
        android:text="Selanjutnya" />

</RelativeLayout>